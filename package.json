{
  "name": "ts-node-express-drizzle",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist coverage",
    "test": "jest --coverage",
    "build": "npx tsc && npm run drizzle:generate && npm run test",
    "build:dev": "npx tsc",
    "build:watch": "npx tsc -w",
    "start": "node dist/db/migrate-standalone.js && node dist/index.js",
    "dev": "npm run docker:up && npm run drizzle:generate && npm run drizzle:migrate && nodemon",
    "docker:up": "docker compose -p communication up -d",
    "docker:down": "docker compose down",
    "drizzle:generate": "drizzle-kit generate:pg",
    "drizzle:migrate": "npx tsx src/db/migrate-standalone.ts",
    "drizzle:push": "drizzle-kit push:pg",
    "drizzle:drop": "drizzle-kit drop"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "postgres": "^3.4.3",
    "redis": "^4.6.13",
    "nodemailer": "^6.9.9",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.7.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.20",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.20.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-sinon": "^2.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
